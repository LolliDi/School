<Window x:Class="School.AdminMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School"
        mc:Ignorable="d"
        Title="AdminMenu" Height="100" Width="220" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Style="{StaticResource HeaderNum2}" Focusable="True">Введите админ. код</TextBlock>
            <PasswordBox Name="CodeBox" Height="25" Width="100" PasswordChanged="CodeBox_PasswordChanged"/>
        </StackPanel>
    </Grid>
</Window>
