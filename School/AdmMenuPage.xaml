<Page x:Class="School.AdmMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdmMenuPage">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Width="150" Click="AddButton_Click" Template="{StaticResource but}">
                <TextBlock HorizontalAlignment="Center">Добавить</TextBlock>
            </Button>
            <Button Width="150" Margin="0,20" Template="{StaticResource but}"  Click="CheckRecords_Click">
                <TextBlock HorizontalAlignment="Center">Просмотр</TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Page>
